<?xml version="1.0"?>
<launch>
  <arg name="uri1" default="radio://0/80/2M/E7E7E7E701" /> <!--Adjust this parameter-->
  <arg name="uri2" default="radio://0/80/2M/E7E7E7E702" /> <!--Adjust this parameter-->
  <arg name="uri3" default="radio://0/80/2M/E7E7E7E703" /> <!--Adjust this parameter-->
  <arg name="uri4" default="radio://0/80/2M/E7E7E7E704" /> <!--Adjust this parameter-->
  <arg name="uri5" default="radio://0/80/2M/E7E7E7E705" /> <!--Adjust this parameter-->
  <arg name="frame1" default="crazyflie1" /> <!--For OptiTrack users: frame name should match the Rigid-body name on Motive-->
  <arg name="frame2" default="crazyflie2" /> <!--For OptiTrack users: frame name should match the Rigid-body name on Motive-->
  <arg name="frame3" default="crazyflie3" /> <!--For OptiTrack users: frame name should match the Rigid-body name on Motive-->
  <arg name="frame4" default="crazyflie4" /> <!--For OptiTrack users: frame name should match the Rigid-body name on Motive-->
  <arg name="frame5" default="crazyflie5" /> <!--For OptiTrack users: frame name should match the Rigid-body name on Motive-->
  <arg name="ip" default="172.16.1.1" /> <!--Adjust this paramter-->
  <arg name="port" default="3883" />

  <include file="$(find crazyflie_driver)/launch/crazyflie_server.launch">
  </include>

  <group ns="crazyflie1">
    <node pkg="crazyflie_driver" type="crazyflie_add" name="crazyflie_add" output="screen">
      <param name="uri" value="$(arg uri1)" />
      <param name="tf_prefix" value="crazyflie1" />
      <param name="enable_logging" value="Fasle" /> <!--Logging is disabled to reduce unnecessary bandwith consumption-->
      <param name="enable_logging_imu" value="False" />
      <param name="enable_logging_temperature" value="False" />
      <param name="enable_logging_magnetic_field" value="False" />
      <param name="enable_logging_pressure" value="False" />
      <param name="enable_logging_battery" value="False" />
      <param name="enable_logging_packets" value="False" />
      <!--rosparam>
        genericLogTopics: ["log1"]
        genericLogTopicFrequencies: [100]
        genericLogTopic_log1_Variables: ["stateEstimate.x", "stateEstimate.y", "stateEstimate.z"]
      </rosparam-->
    </node>

    <node name="pose" pkg="crazyflie_demo" type="publish_external_position_vrpn.py" output="screen">
      <param name="topic" value="/vrpn_client_node/crazyflie1/pose" />
    </node>
  
    <node pkg="tf" type="static_transform_publisher" name="baselink_broadcaster" args="0 0 0 0 0 0 1 $(arg frame1) /crazyflie1/base_link 100" />
    
  </group>
  
  
  <group ns="crazyflie2">
    <node pkg="crazyflie_driver" type="crazyflie_add" name="crazyflie_add" output="screen">
      <param name="uri" value="$(arg uri2)" />
      <param name="tf_prefix" value="crazyflie2" />
      <param name="enable_logging" value="Fasle" /> <!--Logging is disabled to reduce unnecessary bandwith consumption-->
      <param name="enable_logging_imu" value="False" />
      <param name="enable_logging_temperature" value="False" />
      <param name="enable_logging_magnetic_field" value="False" />
      <param name="enable_logging_pressure" value="False" />
      <param name="enable_logging_battery" value="False" />
      <param name="enable_logging_packets" value="False" />
      <!--rosparam>
        genericLogTopics: ["log1"]
        genericLogTopicFrequencies: [100]
        genericLogTopic_log1_Variables: ["stateEstimate.x", "stateEstimate.y", "stateEstimate.z"]
      </rosparam-->
    </node>

    <node name="pose" pkg="crazyflie_demo" type="publish_external_position_vrpn.py" output="screen">
      <param name="topic" value="/vrpn_client_node/crazyflie2/pose" />
    </node>
  
    <node pkg="tf" type="static_transform_publisher" name="baselink_broadcaster" args="0 0 0 0 0 0 1 $(arg frame2) /crazyflie2/base_link 100" />
    
  </group>
  
  <group ns="crazyflie3">
    <node pkg="crazyflie_driver" type="crazyflie_add" name="crazyflie_add" output="screen">
      <param name="uri" value="$(arg uri3)" />
      <param name="tf_prefix" value="crazyflie3" />
      <param name="enable_logging" value="Fasle" /> <!--Logging is disabled to reduce unnecessary bandwith consumption-->
      <param name="enable_logging_imu" value="False" />
      <param name="enable_logging_temperature" value="False" />
      <param name="enable_logging_magnetic_field" value="False" />
      <param name="enable_logging_pressure" value="False" />
      <param name="enable_logging_battery" value="False" />
      <param name="enable_logging_packets" value="False" />
      <!--rosparam>
        genericLogTopics: ["log1"]
        genericLogTopicFrequencies: [100]
        genericLogTopic_log1_Variables: ["stateEstimate.x", "stateEstimate.y", "stateEstimate.z"]
      </rosparam-->
    </node>

    <node name="pose" pkg="crazyflie_demo" type="publish_external_position_vrpn.py" output="screen">
      <param name="topic" value="/vrpn_client_node/crazyflie3/pose" />
    </node>
  
    <node pkg="tf" type="static_transform_publisher" name="baselink_broadcaster" args="0 0 0 0 0 0 1 $(arg frame3) /crazyflie3/base_link 100" />
    
  </group>
  
  
  <group ns="crazyflie4">
    <node pkg="crazyflie_driver" type="crazyflie_add" name="crazyflie_add" output="screen">
      <param name="uri" value="$(arg uri4)" />
      <param name="tf_prefix" value="crazyflie4" />
      <param name="enable_logging" value="Fasle" /> <!--Logging is disabled to reduce unnecessary bandwith consumption-->
      <param name="enable_logging_imu" value="False" />
      <param name="enable_logging_temperature" value="False" />
      <param name="enable_logging_magnetic_field" value="False" />
      <param name="enable_logging_pressure" value="False" />
      <param name="enable_logging_battery" value="False" />
      <param name="enable_logging_packets" value="False" />
      <!--rosparam>
        genericLogTopics: ["log1"]
        genericLogTopicFrequencies: [100]
        genericLogTopic_log1_Variables: ["stateEstimate.x", "stateEstimate.y", "stateEstimate.z"]
      </rosparam-->
    </node>

    <node name="pose" pkg="crazyflie_demo" type="publish_external_position_vrpn.py" output="screen">
      <param name="topic" value="/vrpn_client_node/crazyflie4/pose" />
    </node>
  
    <node pkg="tf" type="static_transform_publisher" name="baselink_broadcaster" args="0 0 0 0 0 0 1 $(arg frame4) /crazyflie4/base_link 100" />
    
  </group>
  
  
  <group ns="crazyflie5">
    <node pkg="crazyflie_driver" type="crazyflie_add" name="crazyflie_add" output="screen">
      <param name="uri" value="$(arg uri5)" />
      <param name="tf_prefix" value="crazyflie5" />
      <param name="enable_logging" value="Fasle" /> <!--Logging is disabled to reduce unnecessary bandwith consumption-->
      <param name="enable_logging_imu" value="False" />
      <param name="enable_logging_temperature" value="False" />
      <param name="enable_logging_magnetic_field" value="False" />
      <param name="enable_logging_pressure" value="False" />
      <param name="enable_logging_battery" value="False" />
      <param name="enable_logging_packets" value="False" />
      <!--rosparam>
        genericLogTopics: ["log1"]
        genericLogTopicFrequencies: [100]
        genericLogTopic_log1_Variables: ["stateEstimate.x", "stateEstimate.y", "stateEstimate.z"]
      </rosparam-->
    </node>

    <node name="pose" pkg="crazyflie_demo" type="publish_external_position_vrpn.py" output="screen">
      <param name="topic" value="/vrpn_client_node/crazyflie5/pose" />
    </node>
  
    <node pkg="tf" type="static_transform_publisher" name="baselink_broadcaster" args="0 0 0 0 0 0 1 $(arg frame5) /crazyflie5/base_link 100" />
    
  </group>
  
  
  <!-- run a single vrpn client -->
  <node pkg="vrpn_client_ros" type="vrpn_client_node" name="vrpn_client_node" output="screen">
    <rosparam subst_value="true">
      server: $(arg ip)
      port: $(arg port)
      update_frequency: 100.0
      frame_id: /world
      use_server_time: false
      broadcast_tf: true
      refresh_tracker_frequency: 1.0 <!-- VRPN will add all trackers found on connection -->
    </rosparam>
  </node>
  
  
  <!-- run rviz -->
  <param name="robot_description" command="$(find xacro)/xacro.py $(find crazyflie_description)/urdf/crazyflie.urdf.xacro" />
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find crazyflie_demo)/launch/crazyflie_pos_multi.rviz" required="true" />

  <!-- run rqt_plot -->
  <!--node pkg="rqt_plot" type="rqt_plot" name="rqt_plot1" args="/crazyflie1/log1/values[0] /crazyflie1/log1/values[1] /crazyflie1/log1/values[2]"/-->
  <!--node pkg="rqt_plot" type="rqt_plot" name="rqt_plot2" args="/crazyflie2/log1/values[0] /crazyflie2/log1/values[1] /crazyflie2/log1/values[2]"/-->
  <!--node pkg="rqt_plot" type="rqt_plot" name="rqt_plot3" args="/crazyflie3/log1/values[0] /crazyflie3/log1/values[1] /crazyflie3/log1/values[2]"/-->
  <!--node pkg="rqt_plot" type="rqt_plot" name="rqt_plot4" args="/crazyflie4/log1/values[0] /crazyflie4/log1/values[1] /crazyflie4/log1/values[2]"/-->
  <!--node pkg="rqt_plot" type="rqt_plot" name="rqt_plot5" args="/crazyflie5/log1/values[0] /crazyflie5/log1/values[1] /crazyflie5/log1/values[2]"/-->
  
 </launch>
